{
  "dataset_type": "audio_dir",
  "datasets": [
    {
      "id": "fma",
      "path": "../data/fma_large/",
      "custom_metadata_module": "metadata.py"
    }
  ],
  "random_crop": true,
  "sample_rate": 44100,
  "channels": 2,
  "augmentations": {
    "pitch_shift": {"enabled": true, "min_semitones": -2, "max_semitones": 2},
    "time_stretch": {"enabled": true, "min_rate": 0.9, "max_rate": 1.1},
    "add_noise": {"enabled": true, "snr_min_db": 20, "snr_max_db": 30}
  }
}
